{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist", // 指定输出目录
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_module/phaser/types",
      "types"
    ]
  },
  "includes": [
    "src/**/*"
  ]
}
